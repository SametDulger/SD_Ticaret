@model SDTicaret.Web.Models.ProductDto

@{
    ViewData["Title"] = "Ürün Sil";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Ürün Sil</h1>
    <p class="mb-4">Bu ürünü silmek istediğinizden emin misiniz?</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Ürün Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Ürün Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
                
                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                
                <dt class="col-sm-3">Tedarikçi</dt>
                <dd class="col-sm-9">@Model.SupplierName</dd>
            </dl>
            
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Uyarı:</strong> Bu işlem geri alınamaz. Ürün kalıcı olarak silinecektir.
                </div>
                
                <input type="submit" value="Sil" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </form>
        </div>
    </div>
</div> 
