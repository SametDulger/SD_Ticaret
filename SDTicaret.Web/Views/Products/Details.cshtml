@model SDTicaret.Web.Models.ProductDto

@{
    ViewData["Title"] = "Ürün Detayları";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Ürün Detayları</h1>
    <p class="mb-4">Ürün bilgilerini görüntüleyin.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Ürün Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Ürün Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Kategori</dt>
                <dd class="col-sm-9">@Model.CategoryName</dd>
                
                <dt class="col-sm-3">Fiyat</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                
                <dt class="col-sm-3">Tedarikçi</dt>
                <dd class="col-sm-9">@Model.SupplierName</dd>
            </dl>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 
