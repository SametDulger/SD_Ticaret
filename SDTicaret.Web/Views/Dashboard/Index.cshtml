@model SDTicaret.Web.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard
            </h1>
            <p class="text-muted mb-0">Sistem genel durumu</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-graph-up me-1"></i>
                Raporlar
            </a>
            <a href="@Url.Action("Create", "Orders")" class="btn btn-primary btn-sm">
                <i class="bi bi-plus me-1"></i>
                Yeni Sipariş
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Kullanıcılar</h6>
                            <h4 class="mb-0">@Model.TotalUsers.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-box"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Ürünler</h6>
                            <h4 class="mb-0">@Model.TotalProducts.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-cart"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Siparişler</h6>
                            <h4 class="mb-0">@Model.TotalOrders.ToString("N0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-currency-dollar"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Gelir</h6>
                            <h4 class="mb-0">@Model.TotalRevenue.ToString("C0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row g-3">
        <!-- Recent Orders -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Son Siparişler
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentOrders?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="border-0">Sipariş No</th>
                                        <th class="border-0">Müşteri</th>
                                        <th class="border-0">Tutar</th>
                                        <th class="border-0">Durum</th>
                                        <th class="border-0">Tarih</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders.Take(5))
                                    {
                                        <tr>
                                            <td>#@order.Id</td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.TotalAmount.ToString("C")</td>
                                            <td>
                                                <span class="badge bg-@(order.OrderStatus == "Delivered" ? "success" : order.OrderStatus == "Pending" ? "warning" : "secondary")">
                                                    @order.OrderStatus
                                                </span>
                                            </td>
                                            <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                            <p class="text-muted mt-2">Henüz sipariş bulunmuyor</p>
                        </div>
                    }
                </div>
                <div class="card-footer bg-transparent border-0 py-2">
                    <a href="@Url.Action("Index", "Orders")" class="btn btn-link btn-sm p-0">
                        Tüm siparişleri görüntüle <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Hızlı İşlemler
                    </h5>
                </div>
                <div class="card-body p-3">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", "Products")" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-plus-circle me-2"></i>
                            Yeni Ürün Ekle
                        </a>
                        <a href="@Url.Action("Create", "Customers")" class="btn btn-outline-success btn-sm">
                            <i class="bi bi-person-plus me-2"></i>
                            Yeni Müşteri Ekle
                        </a>
                        <a href="@Url.Action("Index", "Stocks")" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-boxes me-2"></i>
                            Stok Yönetimi
                        </a>
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-graph-up me-2"></i>
                            Raporlar
                        </a>
                    </div>
                </div>
            </div>

            <!-- Top Products -->
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-star me-2"></i>
                        Popüler Ürünler
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopProducts?.Any() == true)
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var product in Model.TopProducts.Take(5))
                            {
                                <div class="list-group-item border-0 py-2">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="product-icon bg-light rounded">
                                                <i class="bi bi-box text-muted"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0 small">@product.Name</h6>
                                            <small class="text-muted">@product.Price.ToString("C")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <small class="text-muted">Henüz ürün bulunmuyor</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stats-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .product-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
    }
    
    .card {
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style> 
