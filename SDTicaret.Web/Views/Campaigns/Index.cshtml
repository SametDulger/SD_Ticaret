@model IEnumerable<SDTicaret.Web.Models.CampaignDto>

@{
    ViewData["Title"] = "Kampanya Yönetimi";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-megaphone me-2"></i>
                Kampanya Yönetimi
            </h1>
            <p class="text-muted mb-0">@Model.Count() kampanya bulundu</p>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Kampanya ara...">
            </div>
            <a href="@Url.Action("Create", "Campaigns")" class="btn btn-primary btn-sm">
                <i class="bi bi-plus me-1"></i>
                Yeni Kampanya
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-megaphone"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Toplam Kampanya</h6>
                            <h4 class="mb-0">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Aktif Kampanya</h6>
                            <h4 class="mb-0">@Model.Count(c => c.StartDate <= DateTime.Now && c.EndDate >= DateTime.Now)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-clock"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Bekleyen</h6>
                            <h4 class="mb-0">@Model.Count(c => c.StartDate > DateTime.Now)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-percent"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Ortalama İndirim</h6>
                            <h4 class="mb-0">@(Model.Any() ? Model.Average(c => c.DiscountRate).ToString("F0") : "0")%</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Campaigns Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list me-2"></i>
                Kampanya Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Kampanya</th>
                                <th class="border-0">Açıklama</th>
                                <th class="border-0">Tarih Aralığı</th>
                                <th class="border-0">İndirim</th>
                                <th class="border-0">Durum</th>
                                <th class="border-0 text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var campaign in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="campaign-icon bg-light rounded me-3">
                                                <i class="bi bi-megaphone text-muted"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 small">@campaign.Name</h6>
                                                <small class="text-muted">ID: @campaign.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <small class="text-muted">@campaign.Description</small>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="small">@campaign.StartDate.ToString("dd.MM.yyyy")</div>
                                            <small class="text-muted">@campaign.EndDate.ToString("dd.MM.yyyy")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">%@campaign.DiscountRate</span>
                                    </td>
                                    <td>
                                        @if (campaign.StartDate <= DateTime.Now && campaign.EndDate >= DateTime.Now)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else if (campaign.StartDate > DateTime.Now)
                                        {
                                            <span class="badge bg-warning">Beklemede</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Süresi Dolmuş</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Campaigns", new { id = campaign.Id })" 
                                               class="btn btn-outline-primary" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Campaigns", new { id = campaign.Id })" 
                                               class="btn btn-outline-success" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Campaigns", new { id = campaign.Id })" 
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu kampanyayı silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-megaphone text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2">Henüz kampanya bulunmuyor</p>
                    <a href="@Url.Action("Create", "Campaigns")" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus me-1"></i>
                        İlk Kampanyayı Oluştur
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stats-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .campaign-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
    }
    
    .card {
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .table td {
        vertical-align: middle;
    }
</style>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            const campaignName = row.querySelector('h6').textContent.toLowerCase();
            const campaignDesc = row.querySelector('small').textContent.toLowerCase();
            
            if (campaignName.includes(searchTerm) || campaignDesc.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script> 
