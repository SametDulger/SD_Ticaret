@model SDTicaret.Web.Models.CampaignDto

@{
    ViewData["Title"] = "Kampanya Sil";
}

<div class="container-fluid">
    <h1 class="h3 mb-2">Kampanya Sil</h1>
    <p class="mb-4">Bu kampanyayı silmek istediğinizden emin misiniz?</p>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold text-primary">Kampanya Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Kampanya Adı</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Açıklama</dt>
                <dd class="col-sm-9">@Model.Description</dd>
                
                <dt class="col-sm-3">Başlangıç Tarihi</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy")</dd>
                
                <dt class="col-sm-3">Bitiş Tarihi</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy")</dd>
                
                <dt class="col-sm-3">İndirim Oranı</dt>
                <dd class="col-sm-9">%@Model.DiscountRate</dd>
            </dl>
            
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Uyarı:</strong> Bu işlem geri alınamaz. Kampanya kalıcı olarak silinecektir.
                </div>
                
                <input type="submit" value="Sil" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </form>
        </div>
    </div>
</div> 
