@model SDTicaret.Web.Models.ComplaintDto

@{
    ViewData["Title"] = "Şikayet Ekle";
}

<h1>Şikayet Ekle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label">Müşteri</label>
                <select asp-for="CustomerId" class="form-control" required>
                    <option value="">Müşteri Seçin</option>
                    @if (ViewBag.Customers != null)
                    {
                        foreach (var customer in ViewBag.Customers)
                        {
                            <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                        }
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Konu</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label">Oluşturulma Tarihi</label>
                <input asp-for="CreatedDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
