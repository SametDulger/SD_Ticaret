@model SDTicaret.Web.Models.EmployeeDto

@{
    ViewData["Title"] = "Çalışan Detayı";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Çalışan Detayı</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Düzenle
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Kişisel Bilgiler</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>ID:</strong></td>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Ad:</strong></td>
                                    <td>@Model.FirstName</td>
                                </tr>
                                <tr>
                                    <td><strong>Soyad:</strong></td>
                                    <td>@Model.LastName</td>
                                </tr>
                                <tr>
                                    <td><strong>E-posta:</strong></td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td><strong>Telefon:</strong></td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td><strong>Pozisyon:</strong></td>
                                    <td>@Model.Position</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Çalışan Özeti</h5>
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle"></i>
                                Çalışan bilgileri başarıyla görüntüleniyor.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
