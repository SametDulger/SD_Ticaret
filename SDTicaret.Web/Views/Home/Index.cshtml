@{
    ViewData["Title"] = "SD Ticaret - Ana Sayfa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SDTicaret</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" href="~/favicon.ico" />
</head>
<body class="bg-light">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-shop text-primary"></i>
                <span class="text-gradient fw-bold">SDTicaret</span>
            </a>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="@Url.Action("Login", "Auth")">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                </a>
                <a class="nav-link" href="@Url.Action("Register", "Auth")">
                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                </a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="mb-4">
                    <i class="bi bi-shop text-primary" style="font-size: 3.5rem;"></i>
                </div>
                <h1 class="display-5 fw-bold text-gradient mb-3">SD Ticaret</h1>
                <p class="lead text-muted mb-4">Modern ve kullanıcı dostu ticaret yönetim sistemi</p>
                <a href="@Url.Action("Login", "Auth")" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                </a>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-3" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-box-seam" style="font-size: 1.25rem;"></i>
                        </div>
                        <h6 class="card-title fw-semibold">Ürün Yönetimi</h6>
                        <p class="card-text small text-muted">Ürünleri, kategorileri ve stokları kolayca yönetin.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-3" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-cart" style="font-size: 1.25rem;"></i>
                        </div>
                        <h6 class="card-title fw-semibold">Satış Yönetimi</h6>
                        <p class="card-text small text-muted">Siparişleri takip edin ve ödemeleri yönetin.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-info bg-opacity-10 text-info rounded-circle mx-auto mb-3" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-people" style="font-size: 1.25rem;"></i>
                        </div>
                        <h6 class="card-title fw-semibold">Kişi Yönetimi</h6>
                        <p class="card-text small text-muted">Müşteri ve çalışan bilgilerini merkezi olarak yönetin.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="feature-icon bg-warning bg-opacity-10 text-warning rounded-circle mx-auto mb-3" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-graph-up" style="font-size: 1.25rem;"></i>
                        </div>
                        <h6 class="card-title fw-semibold">Raporlama</h6>
                        <p class="card-text small text-muted">Detaylı raporlar ve analizlerle işletmenizi anlayın.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Start -->
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-3 fw-semibold">
                            <i class="bi bi-lightbulb me-2"></i>
                            Hızlı Başlangıç
                        </h5>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <ul class="list-unstyled small">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Giriş yapın ve dashboard'ı inceleyin
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Kategoriler ve ürünler ekleyin
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Müşteri bilgilerini girin
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-unstyled small">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Siparişler oluşturun
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Stokları takip edin
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        Raporları inceleyin
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-top mt-5">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted small mb-0">
                        <i class="bi bi-shop text-primary me-1"></i>
                        SD Ticaret - Modern Ticaret Yönetim Sistemi
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a href="mailto:support@sdticaret.com" class="text-muted small text-decoration-none me-3">
                        <i class="bi bi-envelope me-1"></i>Destek
                    </a>
                    <a href="tel:+905551234567" class="text-muted small text-decoration-none">
                        <i class="bi bi-telephone me-1"></i>İletişim
                    </a>
                </div>
            </div>
        </div>
    </footer>

<style>
    body {
        font-family: 'Inter', sans-serif;
    }
    
    .text-gradient {
        background: linear-gradient(45deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .feature-icon {
        transition: transform 0.2s ease;
    }
    
    .card:hover .feature-icon {
        transform: scale(1.05);
    }
    
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .btn-primary {
        background: linear-gradient(45deg, #007bff, #6610f2);
        border: none;
        transition: transform 0.2s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-1px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 123, 255, 0.3);
    }
</style>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
