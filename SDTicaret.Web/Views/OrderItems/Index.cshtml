@model IEnumerable<SDTicaret.Web.Models.OrderItemDto>

@{
    ViewData["Title"] = "Sipariş Kalemleri";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">
                <i class="bi bi-cart-check me-2"></i>Sipariş Kalemleri
            </h3>
            <p class="text-muted mb-0">Sistemdeki tüm sipariş kalemlerini yönetin</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Yeni Kalem
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="bi bi-cart-fill fs-1"></i>
                    </div>
                    <h4 class="mb-1">@Model.Count()</h4>
                    <p class="text-muted mb-0">Toplam Kalem</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="bi bi-receipt-fill fs-1"></i>
                    </div>
                    <h4 class="mb-1">@Model.Select(oi => oi.OrderId).Distinct().Count()</h4>
                    <p class="text-muted mb-0">Farklı Sipariş</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="bi bi-box-fill fs-1"></i>
                    </div>
                    <h4 class="mb-1">@Model.Select(oi => oi.ProductId).Distinct().Count()</h4>
                    <p class="text-muted mb-0">Farklı Ürün</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-info mb-2">
                        <i class="bi bi-currency-dollar fs-1"></i>
                    </div>
                    <h4 class="mb-1">@Model.Sum(oi => oi.Quantity * oi.UnitPrice).ToString("C")</h4>
                    <p class="text-muted mb-0">Toplam Değer</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" id="searchInput" placeholder="Kalem ara...">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">ID</th>
                            <th class="border-0">Sipariş No</th>
                            <th class="border-0">Ürün</th>
                            <th class="border-0">Adet</th>
                            <th class="border-0">Birim Fiyat</th>
                            <th class="border-0">Toplam</th>
                            <th class="border-0 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Id</td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-receipt text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">#@item.OrderId</div>
                                            <small class="text-muted">Sipariş</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="bi bi-box text-success"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">Ürün #@item.ProductId</div>
                                            <small class="text-muted">Ürün</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-primary bg-opacity-10 text-primary">@item.Quantity</span>
                                </td>
                                <td class="align-middle">
                                    <span class="fw-bold">@item.UnitPrice.ToString("C")</span>
                                </td>
                                <td class="align-middle">
                                    <span class="fw-bold text-success">@((item.Quantity * item.UnitPrice).ToString("C"))</span>
                                </td>
                                <td class="align-middle text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Detaylar">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
    .btn-group .btn {
        border-radius: 0.375rem !important;
    }
    .btn-group .btn:first-child {
        border-top-left-radius: 0.375rem !important;
        border-bottom-left-radius: 0.375rem !important;
    }
    .btn-group .btn:last-child {
        border-top-right-radius: 0.375rem !important;
        border-bottom-right-radius: 0.375rem !important;
    }
</style>

<script>
    document.getElementById('searchInput').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const tableRows = document.querySelectorAll('tbody tr');
        
        tableRows.forEach(row => {
            const text = row.textContent.toLowerCase();
            if (text.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script> 
