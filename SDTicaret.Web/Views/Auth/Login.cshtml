@model SDTicaret.Web.Models.LoginDto

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SDTicaret</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Login CSS -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    

    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" href="~/favicon.ico" />
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-background">
            <div class="login-shapes">
                <div class="shape shape-1"></div>
                <div class="shape shape-2"></div>
                <div class="shape shape-3"></div>
            </div>
        </div>
        
        <div class="login-content">
            <div class="row g-0 h-100">
                <!-- Sol taraf - Login Form -->
                <div class="col-lg-6">
                    <div class="login-card h-100 d-flex flex-column justify-content-center">
                        <!-- Logo and Header -->
                        <div class="text-center mb-4">
                            <div class="login-logo mb-3">
                                <i class="bi bi-shop"></i>
                            </div>
                            <h1 class="h3 text-gradient mb-2">SDTicaret</h1>
                            <p class="text-muted">Yönetim sistemine hoş geldiniz</p>
                        </div>

                        <!-- Login Form -->
                        <form action="/Auth/Login" method="post" class="login-form">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Giriş bilgilerinizi kontrol ediniz.
                                </div>
                            }

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">
                                    <i class="bi bi-person me-2"></i>Kullanıcı Adı
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınızı giriniz" required />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Password" class="form-label">
                                    <i class="bi bi-lock me-2"></i>Şifre
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi giriniz" required />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Beni hatırla
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Giriş Yap
                            </button>

                            <div class="text-center">
                                <a href="@Url.Action("ForgotPassword", "Auth")" class="text-decoration-none">
                                    <i class="bi bi-question-circle me-1"></i>
                                    Şifremi unuttum
                                </a>
                            </div>
                        </form>

                        <!-- Register Link -->
                        <div class="text-center mt-3">
                            <p class="text-muted mb-0">
                                Hesabınız yok mu?
                                <a href="@Url.Action("Register", "Auth")" class="text-decoration-none fw-medium">
                                    Kayıt olun
                                </a>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Sağ taraf - Test Kullanıcıları -->
                <div class="col-lg-6">
                    <div class="test-users-sidebar h-100 d-flex flex-column justify-content-center p-4">
                        <div class="test-user-section rounded p-4">
                            <h5 class="text-center mb-4">
                                <i class="bi bi-info-circle me-2"></i>
                                Test Kullanıcı Bilgileri
                            </h5>
                            <p class="text-muted text-center mb-4 small">
                                Hızlı giriş için aşağıdaki kullanıcılardan birini seçin
                            </p>
                            
                            <div class="test-user-cards">
                                <div class="test-user-card mb-3">
                                    <div class="card border-primary h-100">
                                        <div class="card-header bg-primary text-white text-center py-3">
                                            <i class="bi bi-shield-check me-2"></i>
                                            <strong>Admin Kullanıcısı</strong>
                                        </div>
                                        <div class="card-body p-3">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Kullanıcı Adı</small>
                                                    <strong class="d-block">admin</strong>
                                                </div>
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Şifre</small>
                                                    <strong class="d-block">admin123</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="test-user-card mb-3">
                                    <div class="card border-success h-100">
                                        <div class="card-header bg-success text-white text-center py-3">
                                            <i class="bi bi-person-badge me-2"></i>
                                            <strong>Çalışan Kullanıcısı</strong>
                                        </div>
                                        <div class="card-body p-3">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Kullanıcı Adı</small>
                                                    <strong class="d-block">employee</strong>
                                                </div>
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Şifre</small>
                                                    <strong class="d-block">employee123</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="test-user-card">
                                    <div class="card border-info h-100">
                                        <div class="card-header bg-info text-white text-center py-3">
                                            <i class="bi bi-person me-2"></i>
                                            <strong>Müşteri Kullanıcısı</strong>
                                        </div>
                                        <div class="card-body p-3">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Kullanıcı Adı</small>
                                                    <strong class="d-block">customer</strong>
                                                </div>
                                                <div class="col-6">
                                                    <small class="d-block text-muted">Şifre</small>
                                                    <strong class="d-block">customer123</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="login-footer text-center">
                <p class="text-muted small mb-0">
                    &copy; @DateTime.Now.Year - SDTicaret - Tüm hakları saklıdır.
                </p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // DOM yüklendikten sonra çalıştır
        document.addEventListener('DOMContentLoaded', function() {
            // Password toggle
            const toggleButton = document.getElementById('togglePassword');
            if (toggleButton) {
                toggleButton.addEventListener('click', function() {
            const passwordInput = document.querySelector('input[name="Password"]');
            const icon = this.querySelector('i');
            
            if (!passwordInput || !icon) {
                console.error('Password input or icon not found');
                return;
            }
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        });
        }

        // Form validation 
        const loginForm = document.querySelector('.login-form');
        if (loginForm) {
            loginForm.addEventListener('submit', function(e) {
                const username = document.querySelector('input[name="Username"]').value.trim();
                const password = document.querySelector('input[name="Password"]').value.trim();
                
                if (!username || !password) {
                    e.preventDefault();
                    alert('Lütfen tüm alanları doldurunuz.');
                    return false;
                }
                
                // Form geçerliyse loading state'i başlat
                const submitButton = document.querySelector('.btn-primary[type="submit"]');
                if (submitButton && !submitButton.classList.contains('btn-loading')) {
                    submitButton.classList.add('btn-loading');
                    const originalText = submitButton.innerHTML;
                    submitButton.innerHTML = '<span class="loading me-2"></span>Giriş yapılıyor...';
                    submitButton.disabled = true;
                    
                    // Form submit başarılı olduğunda loading state'i kaldır
                    const form = this;
                    const originalSubmit = form.submit;
                    
                    // 3 saniye sonra loading state'i kaldır (eğer hata olursa)
                    setTimeout(() => {
                        if (submitButton.classList.contains('btn-loading')) {
                            submitButton.classList.remove('btn-loading');
                            submitButton.innerHTML = originalText;
                            submitButton.disabled = false;
                        }
                    }, 3000);
                }
            });
        }

        // Test kullanıcı bilgilerini otomatik doldurma
        const testCards = document.querySelectorAll('.test-user-card');
        testCards.forEach(card => {
            card.addEventListener('click', function() {
                const cardBody = this.querySelector('.card-body');
                const username = cardBody.querySelector('.col-6:first-child strong').textContent;
                const password = cardBody.querySelector('.col-6:last-child strong').textContent;
                
                document.querySelector('input[name="Username"]').value = username;
                const passwordInput = document.querySelector('input[name="Password"]');
                passwordInput.value = password;
                
                // Şifre input'unu password type'ına geri döndür
                passwordInput.type = 'password';
                
                // Icon'u da güncelle
                const toggleButton = document.getElementById('togglePassword');
                const icon = toggleButton.querySelector('i');
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
                
                // Kısa bir animasyon efekti
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 150);
            });
        });
        });
    </script>
</body>
</html> 
