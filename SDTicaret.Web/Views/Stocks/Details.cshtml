@model SDTicaret.Web.Models.StockDto

@{
    ViewData["Title"] = "Stok Detayları";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Stok Detayları</h1>
    <p class="mb-4">Stok bilgilerini görüntüleyin.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Stok Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                
                <dt class="col-sm-3">Ürün</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>
                
                <dt class="col-sm-3">Miktar</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>
                
                <dt class="col-sm-3">Minimum Stok</dt>
                <dd class="col-sm-9">@Model.MinimumStock</dd>
                
                <dt class="col-sm-3">Maksimum Stok</dt>
                <dd class="col-sm-9">@Model.MaximumStock</dd>
                
                <dt class="col-sm-3">Durum</dt>
                <dd class="col-sm-9">
                    @if (Model.Quantity <= Model.MinimumStock)
                    {
                        <span class="badge badge-danger">Kritik</span>
                    }
                    else if (Model.Quantity >= Model.MaximumStock)
                    {
                        <span class="badge badge-warning">Fazla</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Normal</span>
                    }
                </dd>
            </dl>
            
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div> 
