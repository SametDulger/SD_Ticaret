@model SDTicaret.Web.Models.StockDto

@{
    ViewData["Title"] = "Stok Detayları";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-boxes me-2"></i>
                Stok Detayları
            </h1>
            <p class="text-muted mb-0">Stok bilgilerini görüntüleyin</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Edit", "Stocks", new { id = Model.Id })" class="btn btn-outline-success btn-sm">
                <i class="bi bi-pencil me-1"></i>
                Düzenle
            </a>
            <a href="@Url.Action("Index", "Stocks")" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>
                Geri Dön
            </a>
        </div>
    </div>

    <!-- Stock Details Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-info-circle me-2"></i>
                Stok Bilgileri
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stock-icon bg-primary bg-opacity-10 rounded me-3">
                            <i class="bi bi-box text-primary"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Ürün</h6>
                            <p class="text-muted mb-0">@Model.ProductName</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stock-icon bg-success bg-opacity-10 rounded me-3">
                            <i class="bi bi-hash text-success"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Stok ID</h6>
                            <p class="text-muted mb-0">#@Model.Id</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stock-icon bg-info bg-opacity-10 rounded me-3">
                            <i class="bi bi-boxes text-info"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Mevcut Miktar</h6>
                            <p class="text-muted mb-0">@Model.Quantity adet</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stock-icon bg-warning bg-opacity-10 rounded me-3">
                            <i class="bi bi-exclamation-triangle text-warning"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Minimum Stok</h6>
                            <p class="text-muted mb-0">@Model.MinimumStock adet</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="stock-icon bg-danger bg-opacity-10 rounded me-3">
                            <i class="bi bi-graph-up text-danger"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Maksimum Stok</h6>
                            <p class="text-muted mb-0">@Model.MaximumStock adet</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="d-flex align-items-center">
                        <div class="stock-icon bg-@(Model.Quantity <= Model.MinimumStock ? "danger" : Model.Quantity >= Model.MaximumStock ? "warning" : "success") bg-opacity-10 rounded me-3">
                            <i class="bi bi-@(Model.Quantity <= Model.MinimumStock ? "exclamation-triangle" : Model.Quantity >= Model.MaximumStock ? "exclamation-circle" : "check-circle") text-@(Model.Quantity <= Model.MinimumStock ? "danger" : Model.Quantity >= Model.MaximumStock ? "warning" : "success")"></i>
                        </div>
                        <div>
                            <h6 class="mb-1">Stok Durumu</h6>
                            <span class="badge bg-@(Model.Quantity <= Model.MinimumStock ? "danger" : Model.Quantity >= Model.MaximumStock ? "warning" : "success")">
                                @if (Model.Quantity <= Model.MinimumStock)
                                {
                                    <span>Kritik Stok</span>
                                }
                                else if (Model.Quantity >= Model.MaximumStock)
                                {
                                    <span>Fazla Stok</span>
                                }
                                else
                                {
                                    <span>Normal Stok</span>
                                }
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stock-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .card {
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style> 
