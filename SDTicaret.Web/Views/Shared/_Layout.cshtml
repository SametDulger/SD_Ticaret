<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SDTicaret</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SDTicaret.Web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" href="~/favicon.ico" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart3 me-2"></i>SDTicaret
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box me-1"></i>Ürün Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index"><i class="bi bi-box-seam me-2"></i>Ürünler</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags me-2"></i>Kategoriler</a></li>
                                <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index"><i class="bi bi-truck me-2"></i>Tedarikçiler</a></li>
                                <li><a class="dropdown-item" asp-controller="Stocks" asp-action="Index"><i class="bi bi-boxes me-2"></i>Stoklar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="salesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-cart me-1"></i>Satış Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="salesDropdown">
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index"><i class="bi bi-receipt me-2"></i>Siparişler</a></li>
                                <li><a class="dropdown-item" asp-controller="OrderItems" asp-action="Index"><i class="bi bi-list-ul me-2"></i>Sipariş Detayları</a></li>
                                <li><a class="dropdown-item" asp-controller="Payments" asp-action="Index"><i class="bi bi-credit-card me-2"></i>Ödemeler</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="peopleDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people me-1"></i>Kişi Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="peopleDropdown">
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index"><i class="bi bi-person me-2"></i>Müşteriler</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Çalışanlar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="businessDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-building me-1"></i>İş Yönetimi
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="businessDropdown">
                                <li><a class="dropdown-item" asp-controller="Branches" asp-action="Index"><i class="bi bi-geo-alt me-2"></i>Şubeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Contracts" asp-action="Index"><i class="bi bi-file-text me-2"></i>Sözleşmeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Campaigns" asp-action="Index"><i class="bi bi-megaphone me-2"></i>Kampanyalar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="feedbackDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-chat-dots me-1"></i>Geri Bildirim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="feedbackDropdown">
                                <li><a class="dropdown-item" asp-controller="Complaints" asp-action="Index"><i class="bi bi-exclamation-triangle me-2"></i>Şikayetler</a></li>
                                <li><a class="dropdown-item" asp-controller="Surveys" asp-action="Index"><i class="bi bi-clipboard-data me-2"></i>Anketler</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Gizlilik
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("AccessToken") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @Context.Session.GetString("Username")
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile"><i class="bi bi-person me-2"></i>Profil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword"><i class="bi bi-key me-2"></i>Şifre Değiştir</a></li>
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Users"><i class="bi bi-people-fill me-2"></i>Kullanıcı Yönetimi</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Kayıt Ol
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; @DateTime.Now.Year - SDTicaret - Tüm hakları saklıdır.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">
                        <i class="bi bi-shield-check me-1"></i>Gizlilik Politikası
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
