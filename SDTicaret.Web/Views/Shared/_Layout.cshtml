<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SDTicaret</title>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Combined Modern CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="~/favicon.svg" />
    <link rel="alternate icon" href="~/favicon.ico" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Modern Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop"></i>
                    <span class="text-gradient">SDTicaret</span>
                </a>
                
                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <!-- Navigation Items -->
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" 
                               asp-area="" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        
                        <!-- Products Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="productsDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-box-seam"></i>
                                <span>Ürün Yönetimi</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-box"></i>Ürünler</a></li>
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                    <i class="bi bi-tags"></i>Kategoriler</a></li>
                                <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index">
                                    <i class="bi bi-truck"></i>Tedarikçiler</a></li>
                                <li><a class="dropdown-item" asp-controller="Stocks" asp-action="Index">
                                    <i class="bi bi-boxes"></i>Stoklar</a></li>
                            </ul>
                        </li>
                        
                        <!-- Sales Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="salesDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-cart"></i>
                                <span>Satış Yönetimi</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="salesDropdown">
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                                    <i class="bi bi-receipt"></i>Siparişler</a></li>
                                <li><a class="dropdown-item" asp-controller="OrderItems" asp-action="Index">
                                    <i class="bi bi-list-ul"></i>Sipariş Detayları</a></li>
                                <li><a class="dropdown-item" asp-controller="Payments" asp-action="Index">
                                    <i class="bi bi-credit-card"></i>Ödemeler</a></li>
                            </ul>
                        </li>
                        
                        <!-- People Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="peopleDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-people"></i>
                                <span>Kişi Yönetimi</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="peopleDropdown">
                                <li><a class="dropdown-item" asp-controller="Customers" asp-action="Index">
                                    <i class="bi bi-person"></i>Müşteriler</a></li>
                                <li><a class="dropdown-item" asp-controller="Employees" asp-action="Index">
                                    <i class="bi bi-person-badge"></i>Çalışanlar</a></li>
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">
                                    <i class="bi bi-person-gear"></i>Kullanıcılar</a></li>
                            </ul>
                        </li>
                        
                        <!-- Business Management -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="businessDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-building"></i>
                                <span>İş Yönetimi</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="businessDropdown">
                                <li><a class="dropdown-item" asp-controller="Branches" asp-action="Index">
                                    <i class="bi bi-geo-alt"></i>Şubeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Contracts" asp-action="Index">
                                    <i class="bi bi-file-text"></i>Sözleşmeler</a></li>
                                <li><a class="dropdown-item" asp-controller="Campaigns" asp-action="Index">
                                    <i class="bi bi-megaphone"></i>Kampanyalar</a></li>
                            </ul>
                        </li>
                        
                        <!-- Feedback -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="feedbackDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-chat-dots"></i>
                                <span>Geri Bildirim</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="feedbackDropdown">
                                <li><a class="dropdown-item" asp-controller="Complaints" asp-action="Index">
                                    <i class="bi bi-exclamation-triangle"></i>Şikayetler</a></li>
                                <li><a class="dropdown-item" asp-controller="Surveys" asp-action="Index">
                                    <i class="bi bi-clipboard-data"></i>Anketler</a></li>
                            </ul>
                        </li>
                        
                        <!-- Reports -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")" 
                               asp-area="" asp-controller="Reports" asp-action="Index">
                                <i class="bi bi-graph-up"></i>
                                <span>Raporlar</span>
                            </a>
                        </li>
                    </ul>
                    
                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("AccessToken") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i>
                                    <span>@Context.Session.GetString("Username")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                        <i class="bi bi-person"></i>Profil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="ChangePassword">
                                        <i class="bi bi-key"></i>Şifre Değiştir</a></li>
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Auth" asp-action="Users">
                                            <i class="bi bi-people-fill"></i>Kullanıcı Yönetimi</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i>Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="Auth" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i>Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Auth" asp-action="Register">
                                    <i class="bi bi-person-plus"></i>Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="fade-in-up">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <!-- Modern Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-shop me-2"></i>
                        <span>&copy; @DateTime.Now.Year - SDTicaret - Tüm hakları saklıdır.</span>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
                        <i class="bi bi-shield-check me-1"></i>Gizlilik Politikası
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Modern JavaScript Enhancements -->
    <script>
        // Add active class to current nav item
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                });
            });
            
            // Add loading states to buttons
            document.querySelectorAll('.btn').forEach(button => {
                button.addEventListener('click', function() {
                    if (!this.classList.contains('btn-loading')) {
                        this.classList.add('btn-loading');
                        const originalText = this.innerHTML;
                        this.innerHTML = '<span class="loading me-2"></span>Yükleniyor...';
                        
                        setTimeout(() => {
                            this.classList.remove('btn-loading');
                            this.innerHTML = originalText;
                        }, 2000);
                    }
                });
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
