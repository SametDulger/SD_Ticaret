@model IEnumerable<SDTicaret.Web.Models.OrderDto>

@{
    ViewData["Title"] = "Siparişler";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-cart me-2"></i>
                Siparişler
            </h1>
            <p class="text-muted mb-0">@Model.Count() sipariş bulundu</p>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Sipariş ara...">
            </div>
            <a href="@Url.Action("Create", "Orders")" class="btn btn-primary btn-sm">
                <i class="bi bi-plus me-1"></i>
                Yeni Sipariş
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-cart"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Toplam Sipariş</h6>
                            <h4 class="mb-0">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Tamamlanan</h6>
                                                         <h4 class="mb-0">@Model.Count(o => o.OrderStatus == "Delivered")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-clock"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Bekleyen</h6>
                                                         <h4 class="mb-0">@Model.Count(o => o.OrderStatus == "Pending")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-currency-dollar"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Toplam Gelir</h6>
                            <h4 class="mb-0">@(Model.Any() ? Model.Sum(o => o.TotalAmount).ToString("C0") : "₺0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list me-2"></i>
                Sipariş Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Sipariş No</th>
                                <th class="border-0">Müşteri</th>
                                <th class="border-0">Tarih</th>
                                <th class="border-0">Tutar</th>
                                <th class="border-0">Durum</th>
                                <th class="border-0 text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>#@order.Id</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="customer-icon bg-light rounded me-2">
                                                <i class="bi bi-person text-muted"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 small">@order.CustomerName</h6>
                                                <small class="text-muted">ID: @order.CustomerId</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <small>@order.OrderDate.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td>
                                        <strong class="text-success">@order.TotalAmount.ToString("C")</strong>
                                    </td>
                                    <td>
                                    <span class="badge bg-@(order.OrderStatus == "Delivered" ? "success" : order.OrderStatus == "Pending" ? "warning" : order.OrderStatus == "Processing" ? "info" : "secondary")">
                                    @order.OrderStatus
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Orders", new { id = order.Id })" 
                                               class="btn btn-outline-primary" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Orders", new { id = order.Id })" 
                                               class="btn btn-outline-success" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Orders", new { id = order.Id })" 
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu siparişi silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-cart text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2">Henüz sipariş bulunmuyor</p>
                    <a href="@Url.Action("Create", "Orders")" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus me-1"></i>
                        İlk Siparişi Oluştur
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stats-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .customer-icon {
        width: 28px;
        height: 28px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.8rem;
    }
    
    .card {
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .table td {
        vertical-align: middle;
    }
</style>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            const orderId = row.querySelector('strong').textContent.toLowerCase();
            const customerName = row.querySelector('h6').textContent.toLowerCase();
            
            if (orderId.includes(searchTerm) || customerName.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script> 
