@model SDTicaret.Web.Models.CustomerDto

@{
    ViewData["Title"] = "Müşteri Sil";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-exclamation-triangle me-2 text-danger"></i>
                        Müşteri Sil
                    </h1>
                    <p class="text-muted mb-0">Bu işlem geri alınamaz!</p>
                </div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>
                    Listeye Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="card border-0 shadow-sm border-danger">
                <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                    <h5 class="card-title mb-0 text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Silme Onayı
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu müşteriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.
                    </div>
                    
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="customer-avatar bg-light rounded d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-person text-muted" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <h4 class="mb-2">@Model.FirstName @Model.LastName</h4>
                            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") mb-2">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                            <p class="text-muted mb-0">Müşteri ID: @Model.Id</p>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Ad</label>
                            <p class="mb-0 fw-bold">@Model.FirstName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Soyad</label>
                            <p class="mb-0 fw-bold">@Model.LastName</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">E-posta</label>
                            <p class="mb-0">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Telefon</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    @Model.Phone
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmemiş</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted small">Adres</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Model.Address
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Toplam Sipariş</label>
                            <p class="mb-0 fw-bold">@Model.TotalOrders sipariş</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Durum</label>
                            <p class="mb-0">
                                <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                    @(Model.IsActive ? "Aktif Müşteri" : "Pasif Müşteri")
                                </span>
                            </p>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>
                                Müşteriyi Sil
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 
