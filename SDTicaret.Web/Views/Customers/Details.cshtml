@model SDTicaret.Web.Models.CustomerDto

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-person me-2"></i>
                        Müşteri Detayı
                    </h1>
                    <p class="text-muted mb-0">@Model.FirstName @Model.LastName müşterisinin detaylı bilgileri</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-1"></i>
                        Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>
                        Listeye Dön
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 col-xl-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent border-0 py-3">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Müşteri Bilgileri
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="customer-avatar bg-light rounded d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                                <i class="bi bi-person text-muted" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <h4 class="mb-2">@Model.FirstName @Model.LastName</h4>
                            <span class="badge bg-@(Model.IsActive ? "success" : "secondary") mb-2">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                            <p class="text-muted mb-0">Müşteri ID: @Model.Id</p>
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Ad</label>
                            <p class="mb-0 fw-bold">@Model.FirstName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Soyad</label>
                            <p class="mb-0 fw-bold">@Model.LastName</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">E-posta</label>
                            <p class="mb-0">
                                <a href="mailto:@Model.Email" class="text-decoration-none">@Model.Email</a>
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Telefon</label>
                            <p class="mb-0">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <a href="tel:@Model.Phone" class="text-decoration-none">@Model.Phone</a>
                                }
                                else
                                {
                                    <span class="text-muted">Belirtilmemiş</span>
                                }
                            </p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label text-muted small">Adres</label>
                        <p class="mb-0">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Model.Address
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Toplam Sipariş</label>
                            <p class="mb-0 fw-bold">@Model.TotalOrders sipariş</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted small">Durum</label>
                            <p class="mb-0">
                                <span class="badge bg-@(Model.IsActive ? "success" : "secondary")">
                                    @(Model.IsActive ? "Aktif Müşteri" : "Pasif Müşteri")
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
