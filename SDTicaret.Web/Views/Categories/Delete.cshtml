@model SDTicaret.Web.Models.CategoryDto

@{
    ViewData["Title"] = "Kategori Sil";
}

<h1>Kategori Sil</h1>

<h3>Bu kategoriyi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Kategori</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div> 
