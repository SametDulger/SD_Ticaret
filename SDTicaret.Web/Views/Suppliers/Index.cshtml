@model IEnumerable<SDTicaret.Web.Models.SupplierDto>

@{
    ViewData["Title"] = "Tedarikçiler";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-truck me-2"></i>
                Tedarikçiler
            </h1>
            <p class="text-muted mb-0">@Model.Count() tedarikçi bulundu</p>
        </div>
        <div class="d-flex gap-2">
            <div class="input-group" style="max-width: 250px;">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control form-control-sm" id="searchInput" placeholder="Tedarikçi ara...">
            </div>
            <a href="@Url.Action("Create", "Suppliers")" class="btn btn-primary btn-sm">
                <i class="bi bi-plus me-1"></i>
                Yeni Tedarikçi
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-truck"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Toplam Tedarikçi</h6>
                            <h4 class="mb-0">@Model.Count()</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Aktif Tedarikçi</h6>
                            <h4 class="mb-0">@Model.Count(s => s.IsActive)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-box"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Ürün Tedarik Eden</h6>
                            <h4 class="mb-0">@Model.Count(s => s.ProductCount > 0)</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-3">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="stats-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-graph-up"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="card-title text-muted mb-1 small">Ortalama Ürün</h6>
                            <h4 class="mb-0">@(Model.Any() ? Model.Average(s => s.ProductCount).ToString("F1") : "0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-transparent border-0 py-3">
            <h5 class="card-title mb-0">
                <i class="bi bi-list me-2"></i>
                Tedarikçi Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0">Tedarikçi</th>
                                <th class="border-0">İletişim</th>
                                <th class="border-0">Adres</th>
                                <th class="border-0">Ürün Sayısı</th>
                                <th class="border-0">Durum</th>
                                <th class="border-0 text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="supplier-icon bg-light rounded me-3">
                                                <i class="bi bi-building text-muted"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 small">@supplier.Name</h6>
                                                <small class="text-muted">@supplier.ContactPerson</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="small">@supplier.Email</div>
                                            <small class="text-muted">@supplier.Phone</small>
                                        </div>
                                    </td>
                                    <td>
                                        <small class="text-muted">@supplier.Address</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-secondary me-2">@supplier.ProductCount</span>
                                            <small class="text-muted">ürün</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(supplier.IsActive ? "success" : "secondary")">
                                            @(supplier.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", "Suppliers", new { id = supplier.Id })" 
                                               class="btn btn-outline-primary" title="Detay">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Suppliers", new { id = supplier.Id })" 
                                               class="btn btn-outline-success" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Suppliers", new { id = supplier.Id })" 
                                               class="btn btn-outline-danger" title="Sil"
                                               onclick="return confirm('Bu tedarikçiyi silmek istediğinizden emin misiniz?')">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-truck text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2">Henüz tedarikçi bulunmuyor</p>
                    <a href="@Url.Action("Create", "Suppliers")" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus me-1"></i>
                        İlk Tedarikçiyi Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stats-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .supplier-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
    }
    
    .card {
        transition: transform 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .table th {
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .table td {
        vertical-align: middle;
    }
</style>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            const supplierName = row.querySelector('h6').textContent.toLowerCase();
            const contactPerson = row.querySelector('small').textContent.toLowerCase();
            const email = row.querySelector('.small').textContent.toLowerCase();
            
            if (supplierName.includes(searchTerm) || contactPerson.includes(searchTerm) || email.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script> 
